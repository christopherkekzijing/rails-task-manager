<div class="container">

  <h1><%= @task.title %></h1>
  <div class="details">
    <p><%= @task.details %></p>
  </div>

   <% if @task["completed"] == true %>
      <p><input type="checkbox" checked> This task is completed</p>

    <% elsif @task["completed"] != true %>
      <p><input type="checkbox"> This task is not complete yet</p>
    <%end%>

  <div class="line"></div>
  <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
  <%= link_to "edit", edit_task_path, class: "btn btn-primary"  %>

</div>



